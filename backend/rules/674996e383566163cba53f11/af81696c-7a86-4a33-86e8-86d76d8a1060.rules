# SSH brute force detection
alert tcp any any -> any 22 (msg:"Possible SSH brute force attack"; flow:to_server,established; content:"SSH-"; threshold:type both, track by_src, count 10, seconds 60; sid:1000001; rev:1;)

# SSH unusual port detection
alert tcp any any -> any !22 (msg:"SSH traffic on non-standard port"; flow:to_server,established; content:"SSH-"; sid:1000002; rev:1;)

# SSH session initiation
alert tcp any any -> any 22 (msg:"SSH session initiation"; flow:to_server,established; content:"SSH-2.0"; nocase; sid:1000003; rev:1;)

# Detecting long SSH sessions
alert tcp any any -> any 22 (msg:"Long SSH session detected"; flow:to_server,established; session:duration,600,>; sid:1000004; rev:1;)
